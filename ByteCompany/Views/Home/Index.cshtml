@model IEnumerable<ByteCompany.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link href="~/css/CssForHome.css" rel="stylesheet" type="text/css"/>
</head>

<div id="jumbotrom" class="jumbotron">
    <h1 id="Byte">Байт</h1>
    <h4 id="Byte2">Продажа и ремонт компьютерной техники</h4>
</div>
<div>
    <p>Новые поступления:</p>
    <div>
        <table class="table" style="align-content:center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Image != null)
                        {
                            <img class="minimized" id="zoomPhoto"
                                 style='width:80px; height:80px;'
                                 src="data:image/jpeg;base64,
                                     @(Convert.ToBase64String(item.Image))" />
                        }
                        else
                        {
                            <div>Нет фото</div>
                        }
                    </td>
                    <td>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ID">
                            @item.Name
                        </a>
                    </td>
                    <td>
                        @item.Price
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<script type="text/javascript">
    document.write(document.cookie);
</script>