@model IEnumerable<ByteCompany.Models.User>

<hr />
<form asp-controller="Roles" asp-action="UserList">
    <p>
        Искать пользователя: <input type="text" class="btn-outline-primary" name="searchString" />
        <input type="submit" class="btn btn-primary" value="Искать" />
    </p>
</form>

<h2>Список пользователей</h2>
<table class="table">
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FullName</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
            </td>
            <td>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-outline-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<a asp-action="Index" asp-controller="Roles">Управление ролями</a>