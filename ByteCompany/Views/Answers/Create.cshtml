@model ByteCompany.Models.Answer
@{ 
    ViewData["Title"] = "Create";
}

<form asp-action="Create" asp-controller="Answers" asp-route-productId="@Model.ProductId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="custom-control-label">Ваш вопрос</label>
        <input type="text" asp-for="TextAnswer" class="form-control" />
        <span asp-validation-for="TextAnswer" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Добавить" />
</form>

